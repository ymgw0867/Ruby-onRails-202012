<h1 class="display-4 text-primary">People#edit</h1>
<p><%= @msg %> </p>
<%= form_for(@person, url:{controller:'people', action:'update', id:@person.id}) do |f| %>
    <div class="form-group">
        <%= f.label :氏名 %><br />
        <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :年齢 %><br />
        <%= f.text_field :age, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.text_field :mail, class:"form-control" %>
    </div>
    
    <%= f.submit class:"btn btn-primary" %>
<% end %>