<h1 class="display-4 text-primary">Cards#edit</h1>
<p>※「<%= @card.title %>」の内容を編集します</p>
<%= form_for(@card, url:{controller:'cards', action:'edit', id:@card.id}) do |f| %>
    <div class = "form-group">
        <%= f.label :タイトル %><br />
        <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class = "form-group">
        <%= f.label :著者 %><br />
        <%= f.text_field :author, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :価格 %><br />
        <%= f.text_field :price, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :出版社 %><br />
        <%= f.text_field :publisher, class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :コメント %><br />
        <%= f.text_area :memo, rows:5, class:"form-control" %>
    </div>

    <%= f.submit "更新" %>
<% end %>
<p class="link"><a href="/cards">&lt;&lt;※トップページに戻る</a></p>
