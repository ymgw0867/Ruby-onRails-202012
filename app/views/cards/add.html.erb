<h1 class = "display-4 text-primary">Cards#add</h1>
<p>※登録する読書データを入力してください。</p>
<%= form_for(@card, url:{controller: 'cards', action:'add'}) do |f| %>
  <div class = "form-group">
    <label for="title">タイトル</label>
    <%= f.text_field :title, {class:"form-control"} %>
  </div>
  <div class = "form-group">
    <label for="author">著者</label>
    <%= f.text_field :author, {class:"form-control"} %>
  </div>
  <div class = "form-group">
    <label for="price">価格</label>
    <%= f.text_field :price, {class:"form-control"} %>
  </div>
  <div class = "form-group">
    <label for="publisher">出版社</label>
    <%= f.text_field :publisher, {class:"form-control"} %>
  </div>
  <div class = "form-group">
    <label for="memo">コメント</label>
    <%= f.text_area :memo, {rows:5, class:"form-control"} %>
  </div>

  <%= f.submit "保存" %>
<% end %>
<p class="link"><a href="/cards">&lt;&lt;※トップページに戻る</a></p>